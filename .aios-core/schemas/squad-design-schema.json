{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://synkra.dev/schemas/squad-design-schema.json",
  "title": "Squad Design Blueprint Schema",
  "description": "Validates squad design blueprints generated by *design-squad",
  "type": "object",
  "required": ["squad", "recommendations", "metadata"],
  "properties": {
    "squad": {
      "type": "object",
      "required": ["name", "domain"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
          "description": "Squad name in kebab-case"
        },
        "domain": {
          "type": "string",
          "minLength": 2,
          "description": "Domain or area of expertise"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the squad"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        }
      },
      "additionalProperties": true
    },
    "analysis": {
      "type": "object",
      "properties": {
        "source_documents": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "type"],
            "properties": {
              "path": { "type": "string" },
              "type": {
                "type": "string",
                "enum": ["prd", "architecture", "spec", "sop", "requirements", "other"]
              },
              "summary": { "type": "string" }
            }
          }
        },
        "identified_domains": {
          "type": "array",
          "items": { "type": "string" }
        },
        "complexity_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": true
    },
    "recommendations": {
      "type": "object",
      "required": ["agents", "tasks"],
      "properties": {
        "agents": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "role", "confidence"],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$"
              },
              "role": { "type": "string" },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "responsibilities": {
                "type": "array",
                "items": { "type": "string" }
              },
              "commands": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": true
          }
        },
        "tasks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "agent", "confidence"],
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$"
              },
              "agent": { "type": "string" },
              "confidence": {
                "type": "number",
                "minimum": 0,
                "maximum": 1
              },
              "description": { "type": "string" },
              "inputs": {
                "type": "array",
                "items": { "type": "string" }
              },
              "outputs": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "additionalProperties": true
          }
        },
        "workflows": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "description": { "type": "string" },
              "phases": {
                "type": "array",
                "items": { "type": "object" }
              }
            },
            "additionalProperties": true
          }
        },
        "checklists": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "required": ["created_at"],
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 creation timestamp"
        },
        "created_by": {
          "type": "string",
          "description": "Agent or user that created the blueprint"
        },
        "source_docs_count": {
          "type": "integer",
          "minimum": 0
        },
        "design_version": {
          "type": "string"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
